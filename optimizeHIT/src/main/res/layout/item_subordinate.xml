<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_rect_grey"
    android:layout_marginBottom="@dimen/menu_padding">
    
    <TextView
        android:id="@+id/front_icon"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_height="28dp"
        android:layout_width="28dp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:textSize="@dimen/text_size"
        android:textColor="@color/text_black_grey" />

    <TextView
        android:id="@+id/drag_icon"
        android:layout_height="wrap_content"
        android:layout_width="5dp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:alpha="0.7"
        android:text="@string/icon_menu"
        android:textSize="28dp"
        android:textColor="@color/text_black"
        android:visibility="gone" />
    
	<TextView
        android:id="@+id/action_icon"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_height="55dp"
        android:layout_width="wrap_content"
		android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_size"
		android:padding="5dp"
        android:textColor="@color/text_black" />
    
	<TextView
        android:id="@+id/code"
        android:layout_height="55dp"
        android:layout_width="80dp"
		android:layout_centerVertical="true"
		android:layout_toRightOf="@id/front_icon"
		android:gravity="center_vertical"
        android:textStyle="bold"
        android:textSize="@dimen/text_size"
        android:textColor="@color/text_black" />
    
    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_toRightOf="@id/code"
		android:layout_toLeftOf="@id/action_icon"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size"
        android:gravity="center_vertical" />

</RelativeLayout>