<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center_vertical" >

        <TextView
            android:id="@+id/item_icon"
            android:layout_width="match_parent"
            android:layout_height="@dimen/find_a_code_switch_height"
            android:textSize="@dimen/text_size_large_icon"
            android:gravity="center" />

        <TextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-3dp"
            android:textSize="@dimen/text_size_small"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/item_width"
            android:minHeight="@dimen/item_width"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_semi_small"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="@dimen/left_margin_small"
            android:layout_marginTop="@dimen/top_margin_negative"
            android:background="@drawable/circle_red"
            android:visibility="gone"/>

</LinearLayout>



