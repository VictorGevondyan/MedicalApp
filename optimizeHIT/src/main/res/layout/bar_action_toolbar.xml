<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:background="@color/background_light_grey">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/left_margin"
        android:layout_marginStart="@dimen/left_margin"
        android:layout_marginTop="@dimen/solutions_bar_small_padding"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatRatingBar
            android:id="@+id/rating_bar"
            android:stepSize="0.5"
            android:numStars="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="false"
            style="@style/RatingBar.Small" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rate_solution"
            android:layout_gravity="center_horizontal"
            android:textSize="9dp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/play_and_text"
        android:layout_width="@dimen/layout_width_large"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:orientation="horizontal">

        <View
            android:id="@+id/play_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:alpha="0.48"
            android:background="@color/orange" />

        <RelativeLayout
            android:id="@+id/play_panel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/between_components_margin"
            android:layout_marginStart="@dimen/between_components_margin"
            android:clickable="true">

            <TextView
                android:id="@+id/play_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/icon_play_bold"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:id="@+id/pause_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:alpha="0"
                android:text="@string/icon_pause_bold"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_large" />

        </RelativeLayout>

        <TextView
            android:id="@+id/play_tts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/play_panel"
            android:layout_toRightOf="@+id/play_panel"
            android:paddingEnd="@dimen/item_padding"
            android:paddingLeft="@dimen/item_padding"
            android:paddingRight="@dimen/item_padding"
            android:paddingStart="@dimen/item_padding"
            android:textColor="#000000"
            android:textSize="@dimen/text_size" />

    </RelativeLayout>

</RelativeLayout>




















